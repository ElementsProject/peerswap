          }
        },
        "suspiciousPeerList": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "peerswapPremiumRate": {
      "type": "object",
      "properties": {
        "asset": {
          "$ref": "#/definitions/peerswapAssetType"
        },
        "operation": {
          "$ref": "#/definitions/peerswapOperationType"
        },
        "premiumRatePpm": {
          "type": "string",
          "format": "int64"
        }
      },
      "description": "PremiumRate defines the premium rate for a specific asset and operation."
    },
    "peerswapPrettyPrintSwap": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
